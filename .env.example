# =============================================================================
# HOST-LEVEL SETTINGS (Tailscale and Netdata from setup.sh)
# =============================================================================
TAILSCALE_CLIENT_ID=your_tailscale_client_id_here
TAILSCALE_CLIENT_SECRET=your_tailscale_client_secret_here
NETDATA_CLAIM_TOKEN=your_netdata_claim_token_here
NETDATA_CLAIM_URL=https://app.netdata.cloud
NETDATA_CLAIM_ROOMS=your_netdata_claim_rooms_here
HOSTNAME=your_hostname_here

# =============================================================================
# CORE SETTINGS (Used across multiple services)
# =============================================================================
TZ=America/Toronto  # Timezone for all services
PUID=1000  # User ID for file ownership
PGID=100  # Group ID for file ownership
LIBVA_DRIVER_NAME=iHD  # For hardware acceleration (e.g., Intel Quick Sync in media servers)

# =============================================================================
# ARR APP API KEYS (Main focus: Sonarr, Radarr, Lidarr, Readarr)
# =============================================================================
# Generate these from the respective app UIs under Settings > General > Security
SONARR_API_KEY=your_sonarr_api_key_here  # For Sonarr (used in Unpackerr, Doplarr)
RADARR_API_KEY=your_radarr_api_key_here  # For Radarr (used in Unpackerr, Doplarr)
LIDARR_API_KEY=your_lidarr_api_key_here  # For Lidarr (used in Unpackerr)
READARR_AUDIO_API_KEY=your_readarr_audio_api_key_here  # For Readarr Audio (used in Unpackerr)
READARR_EBOOKS_API_KEY=your_readarr_ebooks_api_key_here  # For Readarr Ebooks (used in Unpackerr)

# =============================================================================
# MEDIA PATHS (Mount points for media libraries)
# =============================================================================
MEDIA_PATH=/mnt/media  # Base media path (used in multiple services)
MEDIA_PATH_MOVIES=/mnt/media/movies  # Movies directory
MEDIA_PATH_SHOWS=/mnt/media/shows  # TV shows directory
MEDIA_PATH_MUSIC=/mnt/media/music  # Music directory
MEDIA_PATH_MUSIC_VIDEOS=/mnt/media/music_videos  # Music videos directory
MEDIA_PATH_EDU=/mnt/media/edu  # Educational content directory
MEDIA_PATH_BOOKS=/mnt/media/books  # Books directory (for Audiobookshelf, Calibre)
MEDIA_PATH_AUDIOBOOKS=/mnt/media/books/audiobooks  # Audiobooks subdirectory
MEDIA_PATH_EBOOKS=/mnt/media/ebooks  # Ebooks directory
MEDIA_PATH_SEED=/mnt/media/seed  # Seeding directory (for qBittorrent)
MEDIA_PATH_CLEAN=/mnt/media/clean  # Cleaned/organized directory (for Filebot)
MEDIA_PATH_MOVIES_ALT=/mnt/media/movies  # Alternate movies path (if needed for Radarr)
MEDIA_PATH_SHOWS_ALT=/mnt/media/shows  # Alternate shows path (if needed for Sonarr)

# =============================================================================
# DOWNLOAD PATHS (For qBittorrent, ARR imports, Unpackerr)
# =============================================================================
DOWNLOAD_PATH_INCOMPLETE=/mnt/media/qbittorrent/incomplete  # Incomplete downloads
DOWNLOAD_PATH_COMPLETE=/mnt/media/qbittorrent/complete  # Completed downloads
DOWNLOAD_PATH_TORRENT=/mnt/media/qbittorrent/torrent  # Torrent files
DOWNLOAD_PATH_MONITOR=/mnt/media/monitor  # Monitored directory (for qBittorrent)

# =============================================================================
# FLARESOLVERR SETTINGS (For bypassing protections in indexers)
# =============================================================================
FLARESOLVERR_LOG_LEVEL=info  # Log level (info, debug, etc.)
FLARESOLVERR_LOG_HTML=false  # Log HTML content
FLARESOLVERR_CAPTCHA_SOLVER=none  # Captcha solver (none, or others if configured)
FLARESOLVERR_PORT=8191  # Port for Flaresolverr

# =============================================================================
# DOPLARR SETTINGS (Discord bot for requests)
# =============================================================================
DISCORD_TOKEN=your_discord_bot_token_here  # Discord bot token
DISCORD_MAX_RESULTS=25  # Max search results
DISCORD_MSG_STYLE=plain  # Message style (plain, embed, etc.)
SONARR_QUALITY_PROFILE=Any  # Sonarr quality profile
RADARR_QUALITY_PROFILE=Any  # Radarr quality profile
SONARR_ROOT_FOLDER=/shows  # Sonarr root folder
RADARR_ROOT_FOLDER=/movies  # Radarr root folder
SONARR_LANGUAGE_PROFILE=English  # Sonarr language profile

# =============================================================================
# FILEBOT SETTINGS (For media organization)
# =============================================================================
FILEBOT_USER=your_filebot_username_here  # Basic auth user
FILEBOT_PASSWORD=your_filebot_password_here  # Basic auth password

# =============================================================================
# YOUTUBE-DL SETTINGS (Paths for downloads)
# =============================================================================
YOUTUBE_AUDIO_PATH=/mnt/media/youtube/audio  # Audio downloads
YOUTUBE_VIDEO_PATH=/mnt/media/youtube/video  # Video downloads

# =============================================================================
# DUPLICATI SETTINGS (Backup paths)
# =============================================================================
BACKUP_DESTINATION=/mnt/media/backup  # Backup destination
BACKUP_SOURCE=/home/jordan/  # Backup source (user home or other)

# =============================================================================
# MEALIE SETTINGS (Recipe manager)
# =============================================================================
MEALIE_DB_PASSWORD=your_mealie_db_password_here  # Database password (not used in compose, but referenced)
MEALIE_BASE_URL=http://localhost:9925  # Base URL for Mealie

# =============================================================================
# SYNCTHING SETTINGS (File sync paths)
# =============================================================================
SYNCTHING_MEDIA_PATH=/mnt/media  # Media sync path
SYNCTHING_DOWNLOADS_PATH=/mnt/media/qbittorrent  # Downloads sync path

# =============================================================================
# WIKI.JS SETTINGS (Database credentials)
# =============================================================================
WIKI_DB_USER=wikijs  # Postgres user
WIKI_DB_PASSWORD=your_wiki_db_password_here  # Postgres password
WIKI_DB_NAME=wiki  # Database name

# =============================================================================
# WATCHTOWER SETTINGS (Auto-updates)
# =============================================================================
WATCHTOWER_SCHEDULE=0 2 * * *  # Cron schedule for checks (e.g., daily at 2 AM)
WATCHTOWER_NOTIFICATION_URL=your_shoutrrr_url_here  # Notification URL (e.g., discord://token@channel)